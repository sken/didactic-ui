{
  "name": "@sken/color-picker",
  "version": "2.1.0",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./ColorPicker": {
      "types": "./src/ColorPicker.tsx",
      "import": "./dist/ColorPicker.mjs",
      "require": "./dist/ColorPicker.js"
    },
    "./ColorVariations": {
      "types": "./src/ColorVariations.tsx",
      "import": "./dist/ColorVariations.mjs",
      "require": "./dist/ColorVariations.js"
    },
    "./ColorOutput": {
      "types": "./src/ColorOutput.tsx",
      "import": "./dist/ColorOutput.mjs",
      "require": "./dist/ColorOutput.js"
    },
    "./colorUtils": {
      "types": "./src/colorUtils.ts",
      "import": "./dist/colorUtils.mjs",
      "require": "./dist/colorUtils.js"
    }
  },
  "scripts": {
    "build": "tsup --format cjs,esm --dts --sourcemap inline",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "styled-components": "^6.1.19",
    "tsup": "^8.5.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
